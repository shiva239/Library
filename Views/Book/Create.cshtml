
@{
    ViewBag.Title = "Create";
}

<h2>Create Book</h2>

<form action="~/Book/Create" method="post">
    <br /> <br />
    <div class="form-group row">
        <label class="col-sm-2">Book Title</label>
        <input type="text" id="BookTitle" name="BookTitle" class="form-control  form-control-sm col-sm-4" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2">Description</label>
        <input type="text" id="BookDescr" name="BookDescr" class="form-control  form-control-sm col-sm-4" /> 
    </div>
    <div class="form-group row">
        <label class="col-sm-2">Author Id</label>
        <input type="text" id="AuthorId" name="AuthorId" class="form-control  form-control-sm col-sm-4" /> 
    </div>
    <div class="form-group row">
        <label class="col-sm-2">Book Category </label>
        <input type="text" id="BookCategory" name="BookCategory" class="form-control  form-control-sm col-sm-4" /> 
    </div>
    <div class="form-group row">
        <label class="col-sm-2">Publish Date</label>
        <input type="text" id="BookPublishDate" name="BookPublishDate" class="form-control  form-control-sm col-sm-4" /> 
    </div>
    <br /> <br />
    <input type="submit" value="Save" class="btn btn-success" />
    <br /> <br />
</form>